        @keyframes gradient-fast {
            0%   { background-size: 100% 100%; background-position: 50% 50%; }
            12%  { background-size: 110% 110%; background-position: 68% 32%; }
            25%  { background-size: 122% 122%; background-position: 78% 58%; }
            38%  { background-size: 128% 128%; background-position: 58% 78%; }
            50%  { background-size: 124% 124%; background-position: 30% 68%; }
            62%  { background-size: 118% 118%; background-position: 28% 38%; }
            75%  { background-size: 120% 120%; background-position: 45% 32%; }
            88%  { background-size: 116% 116%; background-position: 52% 42%; }
            100% { background-size: 115% 115%; background-position: 55% 45%; }
        }
        @keyframes gradient-slow {
            0%   { background-size: 115% 115%; background-position: 55% 45%; }
            25%  { background-size: 120% 120%; background-position: 60% 38%; }
            50%  { background-size: 112% 112%; background-position: 42% 55%; }
            75%  { background-size: 118% 118%; background-position: 52% 42%; }
            100% { background-size: 115% 115%; background-position: 55% 45%; }
        }
        @keyframes blob-fast {
            0%   { transform: translate(-50%, -50%) scale(1); opacity: 0.15; }
            15%  { transform: translate(-46%, -55%) scale(1.12); opacity: 0.22; }
            30%  { transform: translate(-42%, -50%) scale(1.22); opacity: 0.27; }
            50%  { transform: translate(-48%, -44%) scale(1.15); opacity: 0.24; }
            70%  { transform: translate(-54%, -48%) scale(1.05); opacity: 0.2; }
            85%  { transform: translate(-50%, -51%) scale(1.08); opacity: 0.21; }
            100% { transform: translate(-48%, -52%) scale(1.1); opacity: 0.22; }
        }
        @keyframes blob-slow {
            0%   { transform: translate(-48%, -52%) scale(1.1); opacity: 0.22; }
            33%  { transform: translate(-52%, -48%) scale(1.15); opacity: 0.25; }
            66%  { transform: translate(-47%, -53%) scale(1.05); opacity: 0.2; }
            100% { transform: translate(-48%, -52%) scale(1.1); opacity: 0.22; }
        }
        .animate-gradient-mesh {
            animation: gradient-fast 3s ease-out forwards, gradient-slow 20s ease-in-out 3s infinite;
        }
        .animate-blob-drift {
            animation: blob-fast 3s ease-out forwards, blob-slow 15s ease-in-out 3s infinite;
        }
        @keyframes dot-appear {
            0% { transform: scale(0); opacity: 0; }
            100% { transform: scale(1); opacity: 1; }
        }
        /* Badge expand: clip-path reveals from center outward */
        .hero-badge {
            opacity: 0;
            clip-path: inset(0 calc(50% - 0.75rem) 0 calc(50% - 0.75rem) round 9999px);
            transition: clip-path 1.0s cubic-bezier(0.65, 0, 0.35, 1),
                        opacity 0.3s ease;
        }
        .hero-badge.is-expanded {
            opacity: 1;
            clip-path: inset(0 0 0 0 round 9999px);
        }
        .hero-badge-text {
            opacity: 0;
            transition: opacity 0.4s ease 0.7s;
        }
        .hero-badge.is-expanded .hero-badge-text {
            opacity: 1;
        }
        .hero-matrix .hero-reveal {
            overflow: hidden;
            opacity: 0;
        }
        .hero-matrix .hero-reveal .hero-reveal-inn {
            display: block;
            opacity: 0;
            transform: matrix(1, 0, 0, 1, 0, 100);
            transition: 1.2s cubic-bezier(0.22, 1, 0.36, 1);
        }
        .hero-matrix.is-animated .hero-reveal {
            opacity: 1;
        }
        .hero-matrix.is-animated .hero-reveal .hero-reveal-inn {
            opacity: 1;
            transform: matrix(1, 0, 0, 1, 0, 0);
        }
        .hero-matrix .hero-reveal.hero-reveal-delay .hero-reveal-inn {
            transition-delay: 0.3s;
        }
        .animate-dot-appear {
            animation: dot-appear 0.4s ease-out 0.3s both;
        }
        @keyframes text-gradient-slide {
            0% { background-position: 200% center; }
            100% { background-position: 0% center; }
        }
        .animate-text-gradient {
            background-image: linear-gradient(to right, #ff00cc, #06b6d4, #ff00cc, #06b6d4);
            background-size: 300% auto;
            -webkit-background-clip: text;
            background-clip: text;
            padding-right: 0.06em;
            animation: text-gradient-slide 2s cubic-bezier(0.08, 0.82, 0.17, 1) forwards;
