---
layout: page.njk
pathPrefix: ""
isPortfolio: false
activePage: activity
---
<main class="flex flex-col w-full pt-16 min-h-screen pb-20">
<article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
<a href="activities.html" class="inline-flex items-center gap-1 text-sm text-text-sub hover:text-primary transition-colors mb-8">
<span class="material-symbols-outlined text-sm">arrow_back</span>
Activity一覧に戻る
</a>
<div class="mb-6">
<div class="flex items-center gap-3 mb-4">
<span class="inline-flex items-center px-3 py-1 rounded-full bg-gradient-to-r from-primary to-cyan-accent text-white text-xs font-bold">
{{ category }}
</span>
<time class="text-sm text-text-sub" datetime="{{ date | dateFormat('iso') }}">
{{ date | dateFormat }}
</time>
</div>
<h1 class="text-3xl md:text-4xl font-black tracking-tight text-text-main mb-6 font-jp">
{{ title }}
</h1>
</div>
{% if thumbnail %}
<div class="mb-10 rounded-2xl overflow-hidden border border-gray-100 shadow-sm">
<img src="{{ thumbnail }}" alt="{{ title }}" class="w-full h-auto object-cover max-h-[480px]"/>
</div>
{% endif %}
<div class="prose prose-lg max-w-none font-jp
prose-headings:text-text-main prose-headings:font-bold
prose-p:text-text-sub prose-p:leading-relaxed
prose-a:text-primary prose-a:no-underline hover:prose-a:underline
prose-img:rounded-xl prose-img:shadow-sm prose-img:border prose-img:border-gray-100
prose-strong:text-text-main
prose-ul:text-text-sub prose-ol:text-text-sub">
{{ content | safe }}
</div>
<hr class="my-12 border-gray-100"/>
<div class="flex justify-between items-center">
{% set allActivities = collections.activities %}
<div>
{% for act in allActivities %}
{% if act.url == page.url and loop.index0 < allActivities.length - 1 %}
<a href="{{ allActivities[loop.index0 + 1].url }}" class="text-sm text-text-sub hover:text-primary transition-colors flex items-center gap-1">
<span class="material-symbols-outlined text-sm">arrow_back</span>
{{ allActivities[loop.index0 + 1].data.title | truncate(30) }}
</a>
{% endif %}
{% endfor %}
</div>
<div>
{% for act in allActivities %}
{% if act.url == page.url and loop.index0 > 0 %}
<a href="{{ allActivities[loop.index0 - 1].url }}" class="text-sm text-text-sub hover:text-primary transition-colors flex items-center gap-1">
{{ allActivities[loop.index0 - 1].data.title | truncate(30) }}
<span class="material-symbols-outlined text-sm">arrow_forward</span>
</a>
{% endif %}
{% endfor %}
</div>
</div>
</article>
</main>
