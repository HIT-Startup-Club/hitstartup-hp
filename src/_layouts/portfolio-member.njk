---
layout: portfolio.njk
---
<main class="flex flex-col w-full min-h-screen">
<section class="relative w-full pt-32 pb-20 lg:pt-40 lg:pb-32 flex flex-col items-center overflow-hidden">
<div class="absolute inset-0 w-full h-full bg-gradient-mesh z-0 pointer-events-none opacity-60"></div>
<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
<div class="grid lg:grid-cols-12 gap-12 lg:gap-8 items-center">
<div class="lg:col-span-7 flex flex-col items-start text-left order-2 lg:order-1">
<div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/60 border border-gray-200 backdrop-blur-sm shadow-sm mb-6">
<span class="w-2 h-2 rounded-full bg-cyan-accent"></span>
<span class="text-sm font-bold text-gray-700 font-jp">{{ role }} / {{ department }}</span>
</div>
<h1 class="text-5xl sm:text-6xl lg:text-7xl font-black tracking-tight text-text-main mb-2 font-jp leading-[1.15]">
                        {{ name }}
                        <span class="block text-3xl font-bold text-gray-400 mt-2 font-sans tracking-normal">{{ nameEn }}</span>
</h1>
<div class="mt-8 mb-8 relative">
<div class="absolute -left-4 top-0 bottom-0 w-1 bg-gradient-to-b from-primary to-cyan-accent rounded-full"></div>
<p class="text-2xl sm:text-3xl lg:text-4xl font-bold leading-tight font-jp text-gray-800">
                        {{ tagline }}<br/>
<span class="text-gradient">{{ taglineHighlight }}</span>ã€‚
                    </p>
</div>
<p class="text-base text-text-sub max-w-xl font-jp leading-relaxed">
                        {{ heroDescription | safe }}
                    </p>
<div class="mt-10 flex gap-4">
<a class="btn-gradient text-white px-8 py-3 rounded-full text-base font-bold shadow-lg hover:shadow-primary/30 transition-all flex items-center gap-2" href="#works">
                            View Works
                            <span class="material-symbols-outlined text-sm">arrow_downward</span>
</a>
<a class="bg-white border border-gray-200 text-gray-700 px-8 py-3 rounded-full text-base font-bold shadow-sm hover:bg-gray-50 transition-all" href="#contact">
                            Contact Me
                        </a>
</div>
</div>
<div class="lg:col-span-5 relative order-1 lg:order-2 flex justify-center lg:justify-end">
<div class="relative w-72 h-72 sm:w-96 sm:h-96 lg:w-[450px] lg:h-[500px]">
<div class="absolute inset-0 bg-gradient-to-tr from-cyan-accent to-primary rounded-[2rem] transform rotate-6 opacity-20 blur-2xl"></div>
<div class="absolute inset-0 border-2 border-white/50 rounded-[2rem] transform -rotate-3 z-0"></div>
<img alt="{{ nameEn }}" class="relative z-10 w-full h-full object-cover rounded-[2rem] shadow-2xl transform hover:scale-[1.02] transition-transform duration-500" {% if photoStyle %}style="{{ photoStyle }}"{% endif %} src="{{ photo }}"/>
</div>
</div>
</div>
</div>
</section>
<section class="py-20 bg-white border-b border-gray-100">
<div class="max-w-4xl mx-auto px-4 text-center">
<h2 class="text-3xl font-bold mb-8 font-jp flex items-center justify-center gap-3">
<span class="material-symbols-outlined text-primary">person</span>
                About Me
            </h2>
<p class="text-lg text-text-sub font-jp leading-8 mb-10">
                {{ content | safe }}
            </p>
<div class="flex flex-wrap justify-center gap-3">
{% for skill in skills %}
<span class="px-5 py-2.5 bg-gray-50 border border-gray-200 rounded-lg text-sm font-bold text-gray-700 font-jp hover:bg-white hover:shadow-md transition-all">{{ skill }}</span>
{% endfor %}
</div>
</div>
</section>
<section class="py-20 bg-white" id="works">
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
<h2 class="text-3xl font-bold font-jp mb-12 flex items-center justify-center gap-3">
<span class="material-symbols-outlined text-primary">folder_open</span>
                Selected Works
            </h2>
<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
{% for project in projects %}
<div class="group bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-sm hover:shadow-xl transition-all duration-300 flex flex-col h-full">
<div class="relative h-48 overflow-hidden bg-gray-100">
<div class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-colors z-10"></div>
<img alt="Project Screenshot" class="w-full h-full object-cover {{ project.imagePosition }} transform group-hover:scale-105 transition-transform duration-500" src="{{ project.image }}"/>
</div>
<div class="p-6 flex flex-col flex-grow">
<h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors">{{ project.title }}</h3>
<p class="text-sm text-text-sub font-jp mb-4 flex-grow line-clamp-3">
                        {{ project.description }}
                    </p>
<div class="mt-auto grid grid-cols-2 gap-4 border-t border-gray-100 pt-4">
<div>
<span class="text-xs font-bold text-gray-400 uppercase tracking-wider block mb-1">Role</span>
<p class="text-sm font-bold text-gray-700">{{ project.role }}</p>
</div>
<div>
<span class="text-xs font-bold text-gray-400 uppercase tracking-wider block mb-1">Impact</span>
<p class="text-sm font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary to-cyan-accent">{{ project.impact }}</p>
</div>
</div>
</div>
</div>
{% endfor %}
</div>
</div>
</section>
<section class="py-24 relative overflow-hidden bg-white">
<div class="absolute inset-0 bg-gradient-mesh opacity-30 pointer-events-none"></div>
<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
<div class="bg-white/80 backdrop-blur-xl border border-white/50 shadow-xl rounded-3xl p-8 md:p-12 lg:p-16 text-center">
<div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-primary/10 border border-primary/20 text-primary text-sm font-bold mb-8 animate-pulse">
<span class="w-2 h-2 rounded-full bg-primary"></span>
                Status: {{ status }}
            </div>
<h2 class="text-3xl md:text-4xl font-black text-text-main mb-6 font-jp">
                {{ visionHeadline }}
            </h2>
<p class="text-lg md:text-xl text-text-sub font-jp leading-relaxed max-w-3xl mx-auto mb-10">
                {{ visionDescription | safe }}
            </p>
<button class="btn-gradient text-white px-10 py-4 rounded-full text-lg font-bold shadow-lg hover:shadow-cyan-accent/50 transition-all">
                Download Resume (PDF)
            </button>
</div>
</div>
</section>
{% if social.note or social.instagram or social.x or social.linkedin %}
<section class="py-16 bg-gray-900 text-white" id="contact">
<div class="max-w-4xl mx-auto px-4 text-center">
<h3 class="text-xl font-bold mb-8 text-gray-400 uppercase tracking-widest text-sm">Find me on</h3>
<div class="flex flex-wrap justify-center gap-6 md:gap-10">
{% if social.note %}
<a class="group flex flex-col items-center gap-3 transition-transform hover:-translate-y-1" href="{{ social.note }}">
<div class="w-14 h-14 rounded-2xl bg-gray-800 flex items-center justify-center group-hover:bg-white group-hover:text-[#41c9b4] transition-colors">
<span class="text-2xl font-bold">Nt</span>
</div>
<span class="text-sm font-medium text-gray-400 group-hover:text-white transition-colors">Note</span>
</a>
{% endif %}
{% if social.instagram %}
<a class="group flex flex-col items-center gap-3 transition-transform hover:-translate-y-1" href="{{ social.instagram }}">
<div class="w-14 h-14 rounded-2xl bg-gray-800 flex items-center justify-center group-hover:bg-[#E1306C] group-hover:text-white transition-colors">
<span class="text-2xl font-bold">Ig</span>
</div>
<span class="text-sm font-medium text-gray-400 group-hover:text-white transition-colors">Instagram</span>
</a>
{% endif %}
{% if social.x %}
<a class="group flex flex-col items-center gap-3 transition-transform hover:-translate-y-1" href="{{ social.x }}">
<div class="w-14 h-14 rounded-2xl bg-gray-800 flex items-center justify-center group-hover:bg-white group-hover:text-black transition-colors">
<span class="text-2xl font-bold">X</span>
</div>
<span class="text-sm font-medium text-gray-400 group-hover:text-white transition-colors">X</span>
</a>
{% endif %}
{% if social.linkedin %}
<a class="group flex flex-col items-center gap-3 transition-transform hover:-translate-y-1" href="{{ social.linkedin }}">
<div class="w-14 h-14 rounded-2xl bg-gray-800 flex items-center justify-center group-hover:bg-[#0077b5] group-hover:text-white transition-colors">
<span class="text-2xl font-bold">in</span>
</div>
<span class="text-sm font-medium text-gray-400 group-hover:text-white transition-colors">LinkedIn</span>
</a>
{% endif %}
</div>
</div>
</section>
{% endif %}
</main>
